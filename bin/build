#! /usr/bin/env node
const runAll = require("npm-run-all")
const pretty = require('pretty-error')

process.env.NODE_ENV = 'production'

build = runAll(["build:*"], {
	parallel: true
	stdin: process.stdin,
	stdout: process.stdout,
	stderr: process.stderr
})


build
	.then(() => {
	    console.log("done!");
	})
	.catch(err => {
		const pe = new pretty()
	    console.error(pe.render(err));
	});